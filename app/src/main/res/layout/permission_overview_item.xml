<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/sdp16">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/permissionLogo"
        android:layout_width="@dimen/sdp18"
        android:layout_height="@dimen/sdp18"
        android:layout_marginStart="@dimen/sdp8"
        app:layout_constraintBottom_toBottomOf="@id/permissionOverviewHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/permissionOverviewHeading" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/permissionOverviewHeading"
        style="@style/Heading"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/sdp8"
        android:layout_marginEnd="@dimen/sdp8"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/permissionLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/permissionOverviewDescription"
        style="@style/Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sdp8"
        android:layout_marginStart="@dimen/sdp8"
        android:layout_marginEnd="@dimen/sdp16"
        android:gravity="start"
        app:layout_constraintEnd_toStartOf="@+id/specialXiaomiSettingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permissionOverviewHeading" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/specialXiaomiSettingButton"
        style="@style/SpecialXiaomiSettingsButtonWithRedBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/sdp16"
        android:text = "@string/enable"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/permissionOverviewDescription"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/sdp8"
        android:layout_marginEnd="@dimen/sdp8"
        android:layout_height="@dimen/sdp1"
        android:background="@color/divider_color"
        android:layout_marginTop="@dimen/sdp16"
        app:layout_constraintTop_toBottomOf="@+id/specialXiaomiSettingButton" />

</androidx.constraintlayout.widget.ConstraintLayout>